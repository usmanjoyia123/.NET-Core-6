<Window x:Class="SimpleLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLogin"
        mc:Ignorable="d"
        Title="Advance Programming Login" Height="480" Width="400">
    <Border Background="LightGray" CornerRadius="20" Width="250" Height="280" Margin="69,14,69,150">
        <StackPanel>
            <Label Content="Login" HorizontalAlignment="Center" FontSize="35" />
            <Separator></Separator>
            <Label Content="Username" HorizontalAlignment="Left" ></Label>
            <TextBox Name="txtBoxUsername" Width="240"></TextBox>
            <Label Content="Password" HorizontalAlignment="Left" ></Label>
            <PasswordBox x:Name="txtBoxPassword" Width="240"></PasswordBox>
            <Button x:Name="btnLogin" Click="Button_Click" Content="Login" Margin="60 10"/>
        </StackPanel>
        
    </Border>
</Window>
